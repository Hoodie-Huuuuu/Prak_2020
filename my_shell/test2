#include <stdlib.h>
#include <sys/wait.h>
main (int argc, char *argv[])
        execlp(argv[1], argv[1], NULL);
            execlp(argv[2], argv[2], NULL);
        int status;
        wait(&status);
        if (WIFEXITED(status) && (WEXITSTATUS(status) == 0))
                execlp(argv[3], argv[3], NULL);
            wait(&status);
            if (WIFEXITED(status) && (WEXITSTATUS(status) == 0)
    wait(NULL);
    wait(NULL);
